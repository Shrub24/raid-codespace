{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:3.12",
	"features": {
		"ghcr.io/prulloac/devcontainer-features/ollama:1": {
				"pull": "phi4-mini"
		}
	},

	// "forwardPorts": [8888, 11434],

	"onCreateCommand": "pip install --no-cache-dir -r requirements.txt",

	"remoteUser": "vscode",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"charliermarsh.ruff"
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"[python]": {
				"editor.formatOnSave": true,
				"editor.defaultFormatter": "charliermarsh.ruff"
				}
			}
		},
		"codespaces": {
      		"disableAutomaticConfiguration": true
    	}
	},

	"secrets": {
		"OPENAI_API_KEY":{
			"description": "Open AI API Key",
			"documentationUrl": "https://platform.openai.com/account/api-keys"
		},
		"GEMINI_API_KEY":{
			"description": "Gemini API Key",
			"documentationUrl": "https://aistudio.google.com/app/apikey"
		},
		"GROQ_API_KEY":{
			"description": "Groq API Key",
			"documentationUrl": "https://console.groq.com/keys"
		}
	}

}
